{
  "name": "eva-utils",
  "version": "0.1.0",
  "private": true,
  "description": "Enterprise utilities for EVA 2.0: logging, config, retry, circuit breakers, token budgets.",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "engines": {
    "node": ">=20.10.0"
  },
  "scripts": {
    "clean": "rimraf dist",
    "build": "tsc -p tsconfig.build.json",
    "dev": "ts-node --transpile-only src/examples/minimal.ts",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "lint": "eslint .",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "check": "npm run typecheck && npm run lint && npm run test",
    "prepare": "husky install"
  },
  "dependencies": {
    "@opentelemetry/api": "^1.9.0",
    "zod": "^3.23.8",
    "uuid": "^11.0.3"
  },
  "devDependencies": {
    "@types/node": "^24.10.1",
    "@vitest/coverage-v8": "^2.1.4",
    "eslint": "^9.14.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.31.0",
    "husky": "^9.1.6",
    "lint-staged": "^15.2.10",
    "prettier": "^3.4.2",
    "rimraf": "^6.0.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.6.3",
    "vitest": "^2.1.4",
    "typescript-eslint": "^8.10.0"
  },
  "lint-staged": {
    "*.{ts,tsx,js,mjs,cjs,json,yml,yaml,md}": [
      "prettier --write"
    ],
    "*.{ts,tsx}": [
      "eslint --max-warnings 0 --no-warn-ignored"
    ]
  }
}
